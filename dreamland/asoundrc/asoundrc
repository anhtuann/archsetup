defaults.ctl.card 1;
defaults.pcm.card 1;

pcm.!default {
      type plug
      slave.pcm "softvol"
  }

  pcm.softvol {
      type softvol
      slave {
          pcm "dmix"
      }
      control {
          name "Pre-Amp"
          card 1
      }
      min_dB -5.0
      max_dB 15.0
      resolution 6
  }
